<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<!-- 渐变 -->
			<gradient android:startColor="#ff8c00" android:endColor="#FFFFFF"
				android:type="radial" android:gradientRadius="50" />

			<!-- 圆角 -->
			<corners android:radius="2dp" />
			<padding android:left="10dp" android:top="10dp"
				android:right="10dp" android:bottom="10dp" />
		</shape>
	</item>

	<item>
		<shape>
			<gradient android:startColor="#585858" android:endColor="#000000"
				android:angle="270" />
		<!-- 	<solid android:color="#1E1E1E" />  -->
			<stroke android:width="1dp" android:color="#1C1C1C" />
			<corners android:topRightRadius="25dp"
				android:bottomLeftRadius="2dp" android:topLeftRadius="25dp"
				android:bottomRightRadius="2dp" />
			<padding android:left="0dp" android:top="0dp" android:right="0dp"
				android:bottom="0dp" />
		</shape>
	</item>
</selector>